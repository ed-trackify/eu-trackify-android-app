<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White_Smoke">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Header Section with Tracking ID and Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:padding="16dp"
                android:elevation="2dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/shipment_id_label"
                        android:textColor="@color/primary"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/sid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/Black"
                        android:textSize="16dp" />
                </LinearLayout>

                <!-- Tracking ID row with prev/next arrows -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:id="@+id/btnPrevShipment"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_chevron_left"
                        android:tint="@color/primary"
                        android:padding="6dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ABCDDDDD"
                                android:textColor="@color/primary"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:layout_marginRight="8dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?android:attr/selectableItemBackground" />

                            <ImageView
                                android:id="@+id/btnCopyTracking"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/ic_copy"
                                android:tint="@color/text_secondary"
                                android:padding="2dp"
                                android:background="?android:attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_marginRight="10dp" />

                            <TextView
                                android:id="@+id/status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Problem"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:background="@color/Black"
                                android:textColor="@color/White"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Position indicator (e.g. "3 of 15") -->
                        <TextView
                            android:id="@+id/tvShipmentPosition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_secondary"
                            android:textSize="11sp"
                            android:layout_marginTop="2dp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btnNextShipment"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_chevron_right"
                        android:tint="@color/primary"
                        android:padding="6dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>

                <!-- Sender info with phone and call icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/shipment_from"
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/sendName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="-"
                        android:textColor="@color/text_primary"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=" • "
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp" />

                    <TextView
                        android:id="@+id/sendPh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="-"
                        android:textColor="@color/Blue"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/ivCallSender"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/call"
                        android:tint="@color/primary"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="4dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/shipment_sender_address"
                    android:textColor="@color/primary"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/sendAddr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/Black"
                    android:textSize="16dp" />
            </LinearLayout>

            <!-- Package Info Card (hidden when no description) -->
            <LinearLayout
                android:id="@+id/packageInfoContainer"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:orientation="vertical"
                android:padding="12dp"
                android:elevation="2dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/package_info_header"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/text_primary"
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>

            <!-- Receiver Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:orientation="vertical"
                android:padding="16dp"
                android:elevation="2dp">

                <!-- Receiver Header with COD -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/shipment_deliver_to"
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/llCodBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/primary"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shipment_cod_label"
                            android:textColor="@color/White"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/recCod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="@color/White"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- First line: Receiver Name and Address on same line -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/recName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" • "
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp" />

                    <TextView
                        android:id="@+id/recAddr"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/Blue"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:drawableLeft="@drawable/ic_map_pin"
                        android:drawablePadding="4dp"
                        android:drawableTint="@color/text_secondary" />
                </LinearLayout>

                <!-- Second line: Phone -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/call"
                        android:tint="@color/text_secondary"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="4dp" />

                    <TextView
                        android:id="@+id/recPh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/Blue"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Third line: Instructions -->
                <LinearLayout
                    android:id="@+id/instructionsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shipment_instructions_header"
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/recInstructions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/text_primary"
                        android:textSize="13sp"
                        android:background="@drawable/instructions_background"
                        android:padding="10dp"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>

                <!-- Contact Actions: Call, SMS, WhatsApp -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ivCall"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_rounded_green2"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/call"
                            android:tint="@color/White" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="@string/action_call"
                            android:textColor="@color/White"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ivSms"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_rounded_blue"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/mail"
                            android:tint="@color/White" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="@string/action_sms"
                            android:textColor="@color/White"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnWhatsApp"
                        android:layout_width="0dp"
                        android:layout_height="42dp"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_rounded_whatsapp"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_whatsapp"
                            android:tint="@color/White" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="@string/action_whatsapp"
                            android:textColor="@color/White"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <!-- Action Buttons Section -->
            <TextView
                android:id="@+id/tvActionsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shipment_actions_header"
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <LinearLayout
                    android:id="@+id/btnInDelivery"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/button_rounded_blue"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="2dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/in_delivery"
                        android:tint="@color/White" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="@string/action_in_delivery"
                        android:textColor="@color/White"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Delivery Action Buttons - Side by Side -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <!-- Deliver Button -->
                    <LinearLayout
                        android:id="@+id/btnDelivered"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="52dp"
                        android:layout_marginRight="6dp"
                        android:background="@drawable/button_rounded_green"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:elevation="2dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/delivered"
                            android:tint="@color/White" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="@string/action_deliver"
                            android:textColor="@color/White"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Problematic Button -->
                    <LinearLayout
                        android:id="@+id/btnRejected"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="52dp"
                        android:layout_marginLeft="6dp"
                        android:background="@drawable/button_rounded_red"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:elevation="2dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/question"
                            android:tint="@color/White" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="@string/action_problematic"
                            android:textColor="@color/White"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>

                <!-- StatusCheck Action Buttons - Packed / Packing (hidden by default) -->
                <LinearLayout
                    android:id="@+id/llStatusCheckButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <!-- Packed Button -->
                    <LinearLayout
                        android:id="@+id/btnPacked"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="52dp"
                        android:layout_marginRight="6dp"
                        android:background="@drawable/button_rounded_turquoise"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:elevation="2dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_package"
                            android:tint="#1A243C" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="@string/action_packed"
                            android:textColor="#1A243C"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Packing Button -->
                    <LinearLayout
                        android:id="@+id/btnPacking"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="52dp"
                        android:layout_marginLeft="6dp"
                        android:background="@drawable/button_rounded_amber"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:elevation="2dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_packing"
                            android:tint="@color/White" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="@string/action_packing"
                            android:textColor="@color/White"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Additional Actions -->
            <TextView
                android:id="@+id/tvAdditionalHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shipment_additional_options"
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <LinearLayout
                    android:id="@+id/btnPrint"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:background="@drawable/button_rounded"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/printer_icon"
                        android:tint="@color/White" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="@string/action_print"
                        android:textColor="@color/White"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnCreateReturn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/button_rounded_fb"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/returning"
                        android:tint="@color/White" />

                    <TextView
                        android:id="@+id/tvBtnCreateReturn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:singleLine="true"
                        android:text="@string/action_return"
                        android:textColor="@color/White"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
