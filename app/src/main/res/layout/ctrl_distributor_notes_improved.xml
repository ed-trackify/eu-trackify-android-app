<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White_Smoke">

    <!-- Add Note Section (Initially Collapsed) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/White"
        android:elevation="2dp">

        <!-- Add Note Button (Always Visible) -->
        <LinearLayout
            android:id="@+id/btnAddNote"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/add_note"
                android:tint="@color/primary" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="@string/notes_add_new"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivExpandIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_expand_more"
                android:tint="@color/text_secondary" />
        </LinearLayout>

        <!-- Note Type Selection (Initially Hidden) -->
        <LinearLayout
            android:id="@+id/llNoteTypeSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone"
            android:animateLayoutChanges="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notes_select_type"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="12dp" />

            <RadioGroup
                android:id="@+id/rgNoteTypes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio1"
                    style="@style/RadioStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/note_type_selector"
                    android:padding="12dp"
                    android:layout_marginBottom="6dp"
                    android:checked="true"
                    android:text="@string/note_type_not_answering" />

                <RadioButton
                    android:id="@+id/radio2"
                    style="@style/RadioStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/note_type_selector"
                    android:padding="12dp"
                    android:layout_marginBottom="6dp"
                    android:text="@string/note_type_wrong_number" />

                <RadioButton
                    android:id="@+id/radio3"
                    style="@style/RadioStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/note_type_selector"
                    android:padding="12dp"
                    android:layout_marginBottom="6dp"
                    android:text="@string/note_type_not_ordered" />

                <RadioButton
                    android:id="@+id/radio4"
                    style="@style/RadioStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/note_type_selector"
                    android:padding="12dp"
                    android:layout_marginBottom="6dp"
                    android:text="@string/note_type_not_in_country" />

                <RadioButton
                    android:id="@+id/radio5"
                    style="@style/RadioStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/note_type_selector"
                    android:padding="12dp"
                    android:layout_marginBottom="6dp"
                    android:text="@string/note_type_rejecting" />

                <RadioButton
                    android:id="@+id/radio6"
                    style="@style/RadioStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/note_type_selector"
                    android:padding="12dp"
                    android:layout_marginBottom="6dp"
                    android:text="@string/note_type_other" />
            </RadioGroup>

            <!-- Custom Note Input -->
            <EditText
                android:id="@+id/et_OtherNote"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_rounded"
                android:gravity="top"
                android:hint="@string/note_custom_hint"
                android:inputType="textMultiLine"
                android:padding="12dp"
                android:textColor="@color/Black"
                android:textColorHint="@color/text_tertiary"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/btnSendComments"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/button_rounded"
                android:text="@string/note_submit"
                android:textColor="@color/White"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Notes Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/notes_history_header"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/text_secondary" />

        <TextView
            android:id="@+id/tvNoteCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 notes"
            android:textSize="11sp"
            android:textColor="@color/text_tertiary" />
    </LinearLayout>

    <!-- Notes List (No ScrollView wrapper) -->
    <ListView
        android:id="@+id/lv_results"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:clickable="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="4dp"
        android:fadingEdge="none"
        android:listSelector="#00000000"
        android:overScrollMode="ifContentScrolls"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:clipToPadding="false"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
        android:scrollbars="vertical"
        android:transcriptMode="alwaysScroll" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/add_note"
            android:tint="@color/text_tertiary"
            android:alpha="0.5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/notes_empty_title"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/notes_empty_subtitle"
            android:textColor="@color/text_tertiary"
            android:textSize="14sp"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>