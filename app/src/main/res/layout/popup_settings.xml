<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_popupRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black_Bg2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/White_Smoke"
            android:paddingBottom="24dp">

            <!-- Header Bar -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/primary"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/settings_title"
                    android:textColor="@color/White"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_Logout"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_rounded_red"
                    android:padding="8dp"
                    android:src="@drawable/logout" />
            </RelativeLayout>

            <!-- Profile Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/settings_section_background"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp">

                <RelativeLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="16dp">

                    <ImageView
                        android:id="@+id/iv_ProfilePicture"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_person"
                        android:tint="@color/text_secondary"
                        android:padding="16dp"
                        android:background="@drawable/button_rounded_outline"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/iv_CameraIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/camera"
                        android:tint="@color/White"
                        android:padding="5dp"
                        android:background="@drawable/button_rounded_blue"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_Username"
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="text"
                        android:clickable="false"
                        android:enabled="false"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textCursorDrawable="@null"
                        android:padding="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_driver_account"
                        android:textColor="@color/text_tertiary"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp" />

                    <Button
                        android:id="@+id/btnChangePhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:text="@string/settings_change_photo"
                        android:textSize="11sp"
                        android:textColor="@color/primary"
                        android:background="@drawable/button_rounded_outline"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Language Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/settings_section_background"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_language_header"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="12dp" />

                <!-- Language grid: 2x2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <!-- English -->
                    <LinearLayout
                        android:id="@+id/lang_english"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/lang_item_default"
                        android:padding="12dp"
                        android:layout_marginRight="4dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="28dp"
                            android:src="@drawable/flag_gb"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_language_english"
                            android:textColor="@color/text_primary"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginTop="6dp" />

                        <ImageView
                            android:id="@+id/check_english"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_check_circle"
                            android:layout_marginTop="4dp"
                            android:visibility="visible" />
                    </LinearLayout>

                    <!-- Macedonian -->
                    <LinearLayout
                        android:id="@+id/lang_macedonian"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/lang_item_default"
                        android:padding="12dp"
                        android:layout_marginLeft="4dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="28dp"
                            android:src="@drawable/flag_mk"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_language_macedonian"
                            android:textColor="@color/text_primary"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginTop="6dp" />

                        <ImageView
                            android:id="@+id/check_macedonian"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_check_circle"
                            android:layout_marginTop="4dp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Albanian -->
                    <LinearLayout
                        android:id="@+id/lang_albanian"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/lang_item_default"
                        android:padding="12dp"
                        android:layout_marginRight="4dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="28dp"
                            android:src="@drawable/flag_al"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_language_albanian"
                            android:textColor="@color/text_primary"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginTop="6dp" />

                        <ImageView
                            android:id="@+id/check_albanian"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_check_circle"
                            android:layout_marginTop="4dp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <!-- Croatian -->
                    <LinearLayout
                        android:id="@+id/lang_croatian"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/lang_item_default"
                        android:padding="12dp"
                        android:layout_marginLeft="4dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="28dp"
                            android:src="@drawable/flag_hr"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_language_croatian"
                            android:textColor="@color/text_primary"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginTop="6dp" />

                        <ImageView
                            android:id="@+id/check_croatian"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_check_circle"
                            android:layout_marginTop="4dp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- SMS Reply Monitoring Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/settings_section_background"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_sms_reply_header"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_sms_monitor_label"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp" />

                    <Switch
                        android:id="@+id/switch_sms_reply_monitoring"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_sms_reply_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_sms_status_disabled"
                    android:textColor="@color/text_tertiary"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />

                <Button
                    android:id="@+id/btn_test_sms_reply"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="@string/settings_sms_test_button"
                    android:textSize="12sp"
                    android:textColor="@color/primary"
                    android:background="@drawable/settings_action_item"
                    android:layout_marginTop="12dp" />
            </LinearLayout>

            <!-- Printer Settings Section (Hidden for now) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_section_background"
                android:padding="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_printer_header"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/printer_icon"
                        android:tint="@color/text_secondary"
                        android:padding="4dp"
                        android:layout_marginRight="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_printer_bluetooth"
                            android:textColor="@color/text_primary"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_printer_description"
                            android:textColor="@color/text_tertiary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <Switch
                        android:id="@+id/switchPrinter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />
                </LinearLayout>
            </LinearLayout>

            <!-- Quick Actions Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/settings_section_background"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_quick_actions"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="12dp" />

                <!-- Change Password -->
                <LinearLayout
                    android:id="@+id/btnChangePasswordContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/settings_action_item"
                    android:padding="14dp"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_lock_lock"
                        android:tint="@color/primary"
                        android:layout_marginRight="14dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_change_password"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right_gray" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="gone" />

                <!-- Manage Permissions -->
                <LinearLayout
                    android:id="@+id/btnPermissionsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/settings_action_item"
                    android:padding="14dp"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_manage"
                        android:tint="@color/primary"
                        android:layout_marginRight="14dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_manage_permissions"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right_gray" />
                </LinearLayout>

                <!-- Check for Update -->
                <LinearLayout
                    android:id="@+id/btnUpdateContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/settings_action_item"
                    android:padding="14dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_upload"
                        android:tint="@color/primary"
                        android:layout_marginRight="14dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_check_updates"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right_gray" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- App Version Footer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/iv_EuFlag"
                    android:layout_width="48dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_eu_flag"
                    android:layout_marginBottom="4dp"
                    android:contentDescription="EU Flag" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_app_name"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_AppVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Version 2.64"
                    android:textColor="@color/text_tertiary"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- Close Button -->
            <Button
                android:id="@+id/btnClose"
                style="@style/ButtonStyleFlat"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/button_close_settings"
                android:text="@string/settings_close"
                android:textColor="@color/White"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
