<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_popupRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black_Bg2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/panel_blank_rounded"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_title"
                        android:textColor="@color/text_primary"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_subtitle"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_Logout"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_rounded_red"
                    android:padding="10dp"
                    android:src="@drawable/logout" />
            </RelativeLayout>

            <!-- User Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F8F8F8"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_user_info_header"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Profile Picture Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <RelativeLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="16dp">

                        <ImageView
                            android:id="@+id/iv_ProfilePicture"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_person"
                            android:tint="@color/text_secondary"
                            android:padding="20dp"
                            android:background="@drawable/button_rounded_outline"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/iv_CameraIcon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/camera"
                            android:tint="@color/White"
                            android:padding="6dp"
                            android:background="@drawable/button_rounded_blue"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_profile_picture"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_tap_change_photo"
                            android:textColor="@color/text_tertiary"
                            android:textSize="13sp" />

                        <Button
                            android:id="@+id/btnChangePhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="@string/settings_change_photo"
                            android:textSize="12sp"
                            android:textColor="@color/primary"
                            android:background="@drawable/button_rounded_outline"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Username Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_person"
                        android:tint="@color/text_secondary"
                        android:padding="8dp"
                        android:background="@drawable/button_rounded_outline"
                        android:layout_marginRight="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_driver_account"
                            android:textColor="@color/text_tertiary"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/et_Username"
                            style="@style/EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/edittext_graybg_gray2border_rounded"
                            android:inputType="text"
                            android:clickable="false"
                            android:enabled="false"
                            android:textColor="@color/text_primary"
                            android:textCursorDrawable="@null" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- SMS Reply Monitoring Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F8F8F8"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_sms_reply_header"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_sms_monitor_label"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                    <Switch
                        android:id="@+id/switch_sms_reply_monitoring"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_sms_reply_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_sms_status_disabled"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/btn_test_sms_reply"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/settings_sms_test_button"
                    android:textSize="12sp"
                    android:background="@drawable/button_rounded_outline"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Printer Settings Section (Hidden for now) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F8F8F8"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_printer_header"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="4dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/printer_icon"
                        android:tint="@color/text_secondary"
                        android:padding="4dp"
                        android:layout_marginRight="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_printer_bluetooth"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_printer_description"
                            android:textColor="@color/text_tertiary"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <Switch
                        android:id="@+id/switchPrinter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />
                </LinearLayout>
            </LinearLayout>

            <!-- Language Selection Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F8F8F8"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_language_header"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- English -->
                <LinearLayout
                    android:id="@+id/lang_english"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/button_rounded_outline"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="ðŸ‡¬ðŸ‡§"
                        android:textSize="28sp"
                        android:gravity="center"
                        android:layout_marginRight="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_language_english"
                            android:textColor="@color/text_primary"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_language_english_desc"
                            android:textColor="@color/text_tertiary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/check_english"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/checkbox_on_background"
                        android:tint="@color/primary"
                        android:visibility="visible" />
                </LinearLayout>

                <!-- Macedonian -->
                <LinearLayout
                    android:id="@+id/lang_macedonian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/button_rounded_outline"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="ðŸ‡²ðŸ‡°"
                        android:textSize="28sp"
                        android:gravity="center"
                        android:layout_marginRight="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_language_macedonian"
                            android:textColor="@color/text_primary"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_language_macedonian_desc"
                            android:textColor="@color/text_tertiary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/check_macedonian"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/checkbox_on_background"
                        android:tint="@color/primary"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- Albanian -->
                <LinearLayout
                    android:id="@+id/lang_albanian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/button_rounded_outline"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="ðŸ‡¦ðŸ‡±"
                        android:textSize="28sp"
                        android:gravity="center"
                        android:layout_marginRight="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_language_albanian"
                            android:textColor="@color/text_primary"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_language_albanian_desc"
                            android:textColor="@color/text_tertiary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/check_albanian"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/checkbox_on_background"
                        android:tint="@color/primary"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <!-- Quick Actions Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_quick_actions"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Change Password Button -->
                <LinearLayout
                    android:id="@+id/btnChangePasswordContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/button_rounded_outline"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_lock_lock"
                        android:tint="@color/primary"
                        android:layout_marginRight="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_change_password"
                            android:textColor="@color/text_primary"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_change_password_desc"
                            android:textColor="@color/text_tertiary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expand_more"
                        android:tint="@color/text_tertiary" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="gone" />

                <!-- Check for Update Button -->
                <LinearLayout
                    android:id="@+id/btnUpdateContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/button_rounded_outline"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_upload"
                        android:tint="@color/primary"
                        android:layout_marginRight="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_check_updates"
                            android:textColor="@color/text_primary"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_check_updates_desc"
                            android:textColor="@color/text_tertiary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_expand_more"
                        android:tint="@color/text_tertiary" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- App Version Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_app_name"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_AppVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Version 2.64"
                    android:textColor="@color/text_tertiary"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Close Button -->
            <Button
                android:id="@+id/btnClose"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/settings_close"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>