<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White_Smoke">

    <LinearLayout
        android:id="@+id/llScan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Black">

            <CheckBox
                android:id="@+id/chkMultiscan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/multiscan_mode"
                android:textColor="@color/White"
                android:textSize="14sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/btnScanPick"
                style="@style/ButtonStyleFlat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:background="#42d4f4"
                android:padding="8dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:drawableLeft="@drawable/ic_package"
                android:drawablePadding="4dp"
                android:text="@string/scan_pickup"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnScanDelivery"
                style="@style/ButtonStyleFlat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:background="#efe770"
                android:padding="8dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:drawableLeft="@drawable/ic_delivery_truck"
                android:drawablePadding="4dp"
                android:text="@string/scan_delivery"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Status Filter Chips -->
    <LinearLayout
        android:id="@+id/statusFilterContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/White"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center">

        <TextView
            android:id="@+id/filterStatusInDelivery"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/chip_in_delivery_selected"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center"
            android:layout_marginRight="4dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/filterStatusPickedUp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/chip_picked_up_selected"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center"
            android:layout_marginRight="4dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/filterStatusProblematic"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/chip_problematic_selected"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_Search"
        style="@style/EditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusFilterContainer"
        android:layout_margin="5dp"
        android:background="@drawable/edittext_rounded"
        android:hint="@string/search_hint"
        android:singleLine="true"
        android:textCursorDrawable="@null"
        android:visibility="visible"></EditText>

    <com.terlici.dragndroplist.DragNDropListView
        android:id="@+id/lv_results"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/llScan"
        android:layout_below="@id/et_Search"
        android:layout_centerHorizontal="true"
        android:choiceMode="singleChoice"
        android:clickable="true"
        android:divider="@null"
        android:fadingEdge="none"
        android:listSelector="#00000000"
        android:overScrollMode="ifContentScrolls"
        android:paddingLeft="6dp"
        android:paddingTop="5dp"
        android:paddingRight="6dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
        android:scrollbars="vertical"
        android:transcriptMode="disabled" />

</RelativeLayout>