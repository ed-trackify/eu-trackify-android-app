<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White_Smoke">

    <LinearLayout
        android:id="@+id/llScan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary">

            <CheckBox
                android:id="@+id/chkMultiscan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/multiscan_mode"
                android:textColor="@color/White"
                android:textSize="14sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/primary"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnScanPick"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginRight="4dp"
                android:background="@drawable/btn_bottom_packed"
                android:drawableLeft="@drawable/ic_package"
                android:drawablePadding="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/btn_packed"
                android:textColor="#1A243C"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center" />

            <Button
                android:id="@+id/btnReturnReceived"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/btn_bottom_return"
                android:drawableLeft="@drawable/ic_tab_returns"
                android:drawablePadding="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/btn_return_received"
                android:textColor="@color/White"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center" />

            <Button
                android:id="@+id/btnStatusCheck"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:background="@drawable/btn_bottom_check"
                android:drawableLeft="@drawable/ic_search"
                android:drawablePadding="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/btn_check"
                android:textColor="@color/White"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- Status Filter Chips (hidden) -->
    <LinearLayout
        android:id="@+id/statusFilterContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/White"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/filterStatusInDelivery"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/chip_in_delivery_selected"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center"
            android:layout_marginRight="4dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/filterStatusPickedUp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/chip_picked_up_selected"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center"
            android:layout_marginRight="4dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/filterStatusProblematic"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/chip_problematic_selected"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_Search"
        style="@style/EditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/edittext_rounded"
        android:hint="@string/search_hint"
        android:singleLine="true"
        android:textCursorDrawable="@null"
        android:visibility="visible"></EditText>

    <com.terlici.dragndroplist.DragNDropListView
        android:id="@+id/lv_results"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/llScan"
        android:layout_below="@id/et_Search"
        android:layout_centerHorizontal="true"
        android:choiceMode="singleChoice"
        android:clickable="true"
        android:divider="@null"
        android:fadingEdge="none"
        android:listSelector="#00000000"
        android:overScrollMode="ifContentScrolls"
        android:paddingLeft="6dp"
        android:paddingTop="5dp"
        android:paddingRight="6dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
        android:scrollbars="vertical"
        android:transcriptMode="disabled" />

</RelativeLayout>