<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:background="@color/White_Smoke"
    android:paddingBottom="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvLeft"
            android:layout_width="wrap_content"
            android:minWidth="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_primary_only_tops_rounded"
            android:padding="3dp"
            android:gravity="center_horizontal"
            android:text="Me"
            android:textColor="@color/White"
            android:textSize="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/panel_blank_rounded_white_for_my_note"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvComm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMMENTS"
                android:textColor="@color/Black"
                android:textSize="12dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_primary_only_bottoms_rounded"
            android:padding="3dp"
            android:layout_gravity="right"
            android:text="COMMENTS"
            android:textColor="@color/White"
            android:textSize="10dp" />
    </LinearLayout>


</LinearLayout>