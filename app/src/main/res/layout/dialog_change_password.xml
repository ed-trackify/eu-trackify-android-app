<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_dialogRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black_Bg2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/panel_blank_rounded"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password_change_title"
                android:textColor="@color/text_primary"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp" />

            <!-- Current Password Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    style="@style/PanelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:paddingRight="8dp"
                    android:text="@string/password_current"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_CurrentPassword"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_graybg_gray2border_rounded"
                    android:inputType="textPassword"
                    android:textCursorDrawable="@null"
                    android:hint="@string/password_current_hint"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" />
            </LinearLayout>

            <!-- New Password Section with Toggle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    style="@style/PanelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:paddingRight="8dp"
                    android:text="@string/password_new"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_NewPassword"
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/edittext_graybg_gray2border_rounded"
                        android:inputType="textPassword"
                        android:textCursorDrawable="@null"
                        android:hint="@string/password_new_hint"
                        android:paddingLeft="12dp"
                        android:paddingRight="48dp" />

                    <ImageButton
                        android:id="@+id/btn_ToggleNewPassword"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentEnd="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_menu_view"
                        android:tint="@color/text_tertiary"
                        android:scaleType="centerInside"
                        android:padding="12dp" />
                </RelativeLayout>

                <!-- Password Strength Indicator -->
                <TextView
                    android:id="@+id/tv_PasswordStrength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_tertiary"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Confirm Password Section with Toggle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    style="@style/PanelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:paddingRight="8dp"
                    android:text="@string/password_confirm"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_ConfirmPassword"
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/edittext_graybg_gray2border_rounded"
                        android:inputType="textPassword"
                        android:textCursorDrawable="@null"
                        android:hint="@string/password_confirm_hint"
                        android:paddingLeft="12dp"
                        android:paddingRight="48dp" />

                    <ImageButton
                        android:id="@+id/btn_ToggleConfirmPassword"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentEnd="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_menu_view"
                        android:tint="@color/text_tertiary"
                        android:scaleType="centerInside"
                        android:padding="12dp" />
                </RelativeLayout>

                <!-- Password Match Indicator -->
                <TextView
                    android:id="@+id/tv_PasswordMatch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_tertiary"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Password Requirements -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F5F5F5"
                android:padding="12dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/password_requirements_title"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/password_requirement_length"
                    android:textColor="@color/text_tertiary"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/password_requirement_complexity"
                    android:textColor="@color/text_tertiary"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnCancel"
                    style="@style/ButtonStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:layout_marginRight="8dp"
                    android:text="@string/password_button_cancel"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnChangePassword"
                    style="@style/ButtonStyleBlue"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:layout_marginLeft="8dp"
                    android:text="@string/password_button_submit"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>