<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:orientation="vertical"
    android:padding="12dp">
    
    <!-- Header Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        
        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SENT"
            android:textSize="11sp"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/status_sent" />
        
        <TextView
            android:id="@+id/typeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Auto (Delivery)"
            android:textSize="12sp"
            android:textColor="@color/text_secondary" />
        
        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jan 5, 14:30"
            android:textSize="12sp"
            android:textColor="@color/text_secondary" />
        
    </LinearLayout>
    
    <!-- Phone Number -->
    <TextView
        android:id="@+id/phoneText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="+38970123456"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary" />
    
    <!-- Message Content -->
    <LinearLayout
        android:id="@+id/messageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/message_background"
        android:padding="8dp"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/messageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message content"
            android:textSize="14sp"
            android:textColor="@color/text_primary" />
            
    </LinearLayout>
    
    <!-- PIN Code (if available) -->
    <TextView
        android:id="@+id/pinCodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="PIN: 1234"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:background="@drawable/pin_background"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:visibility="gone" />
    
    <!-- Attempts (if more than 1) -->
    <TextView
        android:id="@+id/attemptsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Attempts: 2"
        android:textSize="12sp"
        android:textColor="@color/text_tertiary"
        android:visibility="gone" />
        
</LinearLayout>