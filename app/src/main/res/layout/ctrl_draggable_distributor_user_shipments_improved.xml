<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White_Smoke">

    <!-- Statistics Header -->
    <LinearLayout
        android:id="@+id/statsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:orientation="vertical"
        android:elevation="2dp">

        <!-- Quick Stats Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <!-- Total Deliveries -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvTotalCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shipments_total"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- Pending -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvPendingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/warning"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shipments_pending"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- Delivered -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvDeliveredCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/success"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shipments_delivered"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- COD Collected -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvCodTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0"
                    android:textColor="@color/primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shipments_cod"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Filter Tabs -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/filterAll"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="@string/filter_all"
                    android:textColor="@color/White"
                    android:textSize="13sp"
                    android:background="@drawable/filter_chip_selected"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/filterPriority"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="@string/filter_priority"
                    android:textColor="@color/text_primary"
                    android:textSize="13sp"
                    android:background="@drawable/filter_chip"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/filterCod"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="@string/filter_cod"
                    android:textColor="@color/text_primary"
                    android:textSize="13sp"
                    android:background="@drawable/filter_chip"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/filterNearby"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="@string/filter_nearby"
                    android:textColor="@color/text_primary"
                    android:textSize="13sp"
                    android:background="@drawable/filter_chip"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/filterPending"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="@string/filter_pending"
                    android:textColor="@color/text_primary"
                    android:textSize="13sp"
                    android:background="@drawable/filter_chip"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Status Filter Chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="@color/White"
        android:paddingTop="4dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:id="@+id/filterStatusInDelivery"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/status_in_delivery"
                android:textColor="@color/text_primary"
                android:textSize="13sp"
                android:background="@drawable/filter_chip"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center"
                android:layout_marginRight="8dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/filterStatusPickedUp"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/status_picked_up"
                android:textColor="@color/text_primary"
                android:textSize="13sp"
                android:background="@drawable/filter_chip"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center"
                android:layout_marginRight="8dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/filterStatusProblematic"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/status_problematic"
                android:textColor="@color/text_primary"
                android:textSize="13sp"
                android:background="@drawable/filter_chip"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/et_Search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:background="@drawable/edittext_rounded"
            android:hint="@string/search_hint"
            android:textSize="14sp"
            android:paddingLeft="40dp"
            android:paddingRight="12dp"
            android:singleLine="true"
            android:textCursorDrawable="@null" />

        <!-- Search Icon Overlay -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_search"
            android:tint="@color/text_tertiary"
            android:layout_marginLeft="-0dp"
            android:layout_marginStart="-0dp"
            android:translationX="-0dp" />

        <!-- Sort Button -->
        <ImageView
            android:id="@+id/btnSort"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_sort"
            android:tint="@color/text_secondary"
            android:padding="10dp"
            android:layout_marginLeft="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Deliveries List -->
    <com.terlici.dragndroplist.DragNDropListView
        android:id="@+id/lv_results"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:clickable="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:fadingEdge="none"
        android:listSelector="#00000000"
        android:overScrollMode="ifContentScrolls"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:clipToPadding="false"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
        android:scrollbars="vertical" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_delivery_truck"
            android:tint="@color/text_tertiary"
            android:alpha="0.5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/shipments_empty_title"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/shipments_empty_subtitle"
            android:textColor="@color/text_tertiary"
            android:textSize="14sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Bottom Action Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/White"
        android:elevation="8dp">

        <!-- Multi-scan Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:background="@color/White_Smoke">

            <CheckBox
                android:id="@+id/chkMultiscan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/multiscan_mode"
                android:textColor="@color/text_primary"
                android:textSize="13sp" />

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tvSelectedCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 selected"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Scan Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/btnScanPick"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:background="@drawable/button_rounded_outline"
                android:orientation="horizontal"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginRight="4dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_package"
                    android:tint="@color/primary"
                    android:layout_marginRight="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scan_pickup"
                    android:textColor="@color/primary"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnScanDelivery"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:background="@drawable/button_rounded_outline"
                android:orientation="horizontal"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginLeft="4dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_delivery_truck"
                    android:tint="@android:color/black"
                    android:layout_marginRight="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scan_delivery"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>